<div class="main-container">
    <div>
        <h2 class="row mb-5">Vista de productos</h2>
        {{#if productos}}
        <div class="table-responsive mb-3">
            <table class="table table-light">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                </tr>
                </thead>
                <tbody>
            {{#each productos}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src={{this.thumbnail}} width="70px"></td>
                </tr>
            {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}       
            <div class="alert alert-danger" role="alert">
                <p>No se encontraron productos</p>
            </div>
        {{/if}}

        <button type="button" onclick="location.href='/'" class="btn btn-primary mt-3">Ir al formulario</button>
    </div>
</div>

